<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_base_abnormal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layout_weight="1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/basic_iv_tips_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/base_tv_tips_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:textColor="@color/color_333"
        android:textSize="@dimen/x30"
        android:visibility="visible"
        android:text="获取数据失败"
        tools:text="获取数据失败"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/base_tv_tips_state_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x28"
        android:text="请检查您的网络设置"
        android:textColor="@color/color_999"
        android:textSize="@dimen/x26"
        android:visibility="visible"
        tools:text="请检查您的网络设置"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/basic_tv_tips_try_again"
        android:layout_width="@dimen/x152"
        android:layout_height="@dimen/x62"
        android:layout_marginTop="@dimen/x48"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/white"
        android:textSize="@dimen/x26"
        android:visibility="visible"
        tools:text="重新加载"
        tools:visibility="visible" />
</LinearLayout>