<?xml version="1.0" encoding="utf-8"?><!--app统一title-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_activity_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x112"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--左边布局 -->
        <LinearLayout
            android:id="@+id/ll_left_title_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="9dp"
            android:visibility="gone"
            tools:ignore="RtlHardcoded,RtlSymmetry">


        </LinearLayout>

        <!--左边返回按钮-->
        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_marginLeft="@dimen/x6"
            android:layout_marginTop="@dimen/x12"
            android:background="@mipmap/ic_title_back"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_middle_title"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="18dp"
            android:visibility="visible"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            tools:text="标题"
            tools:visibility="gone" />

        <!--右边布局-->
        <LinearLayout
            android:id="@+id/ll_right_title_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x10"
            android:layout_marginRight="@dimen/x26"
            android:paddingRight="6dp"
            android:visibility="visible"
            tools:ignore="RtlHardcoded,RtlSymmetry">

        </LinearLayout>

    </LinearLayout>

    <!--中间布局-->
    <TextView
        android:id="@+id/tv_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_333"
        android:textSize="@dimen/x32"
        android:visibility="gone"
        tools:text="标题"
        tools:visibility="visible" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_gravity="bottom"
        android:background="@color/gray_background" />

</FrameLayout>

