<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/health_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/health_fillout_question_one_viewpager_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:textColor="@color/color_333"
            android:textSize="@dimen/x36" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/health_fillout_question_one_viewpager_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/health_title_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x50"
        android:fillViewport="false"
        android:scrollbars="none"/>

    <ScrollView
        android:id="@+id/health_fillout_question_physical_edit_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/health_title_layout"
        android:layout_marginRight="10dp"
        android:fillViewport="false"
        android:scrollbars="none"
        android:visibility="gone"/>
</RelativeLayout>