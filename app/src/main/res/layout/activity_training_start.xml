<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.freightmanagement.View.HomeWorkViewPager
        android:id="@+id/health_fillout_questionnare_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/health_fillout_questionnare_linearlayout" />


    <LinearLayout
        android:id="@+id/health_fillout_questionnare_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/gray_background" />

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="@dimen/x130"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/health_fillout_questionnare_back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/x80"
                android:layout_marginLeft="@dimen/x60"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao20"
                android:gravity="center"
                android:text="上一页"
                android:textColor="@color/color_333" />

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/health_fillout_questionnare_now_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/x36" />


            </RelativeLayout>

            <Button
                android:id="@+id/health_fillout_questionnare_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/x80"
                android:layout_marginRight="@dimen/x60"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao20"
                android:gravity="center"
                android:text="下一页"
                android:textColor="@color/color_333" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>