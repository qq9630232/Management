<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <RelativeLayout
        android:id="@+id/index_rl_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.freightmanagement.View.MyViewPager
            android:id="@+id/index_vp_fragment_list_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x110"
            android:layout_alignParentTop="true">

        </com.example.freightmanagement.View.MyViewPager>

        <FrameLayout
            android:id="@+id/index_fl_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:background="@color/gray_background"
                android:baselineAligned="false" android:clickable="true"
                android:orientation="horizontal">

                <!-- 首页 -->
                <LinearLayout
                    android:id="@+id/index_bottom_bar_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/index_bottom_bar_home_image"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="top|center"
                        android:src="@drawable/tab_home_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="@dimen/x6"
                        android:text="返回"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/x20" />

                </LinearLayout>

                <!-- 动态 -->

                <LinearLayout
                    android:id="@+id/index_bottom_bar_dynamic_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/index_bottom_bar_dynamic_state_image"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="top|center"
                        android:src="@drawable/tab_huiyi_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="@dimen/x6"
                        android:text="首页"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/x20" />
                </LinearLayout>


                <!-- 我的 -->

                <LinearLayout
                    android:id="@+id/index_bottom_bar_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/index_bottom_bar_me_image"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="top|center"
                        android:src="@drawable/tab_mine_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="@dimen/x6"
                        android:text="退出"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/x20" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
