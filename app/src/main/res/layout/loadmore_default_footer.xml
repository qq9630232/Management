<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_foot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/lin_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/pull_to_load_progress"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center"
            android:src="@mipmap/shangla"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/loadmore_default_footer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x16"
            android:text="上拉加载更多"
            android:textColor="@color/color_999"
            android:textSize="@dimen/x24"
            tools:ignore="HardcodedText"
            tools:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="已全部加载完毕"
            android:textSize="@dimen/x24"
            android:textColor="@color/color_999"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@+id/txt"
            android:background="@color/color_ddd"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_toRightOf="@+id/txt"
            android:background="@color/color_ddd"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
</RelativeLayout>


